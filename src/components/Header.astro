---
// Données du header
const title = "Prima Pizza Capbreton";
const address = "77 Av. Georges Pompidou, 40130 Capbreton";
const hours = "18h30 - 22h";
const closedDay = "Fermé le lundi";
const phone = "05 58 74 94 95";
const phoneHref = "tel:+33558749495";
---

<header class="fixed top-0 left-0 w-full backdrop-blur-sm z-50" role="banner">
  <div class="container mx-auto px-4 max-w-5xl">
    <div class="py-3 border-b border-gray-200">
      <!-- Layout responsive unifié -->
      <div class="flex items-center justify-between md:grid md:grid-cols-3 md:items-center md:gap-4">
        
        <!-- Colonne 1: Titre + Adresse (mobile) / Adresse seule (desktop) -->
        <div class="flex flex-col md:order-1">
          <!-- Version mobile -->
          <div class="md:hidden">
            <h1 class="text-xl font-bold text-gray-800 font-panpizza">
              <span class="text-red-600">Prima</span>
              <span class="text-gray-800"> Pizza </span>
              <span class="text-green-700">Capbreton</span>
            </h1>
            <p class="text-xs text-gray-600 mt-1">{address}</p>
          </div>
          <!-- Version desktop - Adresse seule -->
          <div class="hidden md:block">
            <p class="text-xs text-gray-600">77 Av. Georges Pompidou</p>
            <p class="text-xs text-gray-600">40130 Capbreton</p>
          </div>
        </div>

        <!-- Colonne 2: Titre centré (desktop uniquement) -->
        <div class="hidden md:flex md:justify-center md:order-2">
          <h1 class="text-xl font-bold text-gray-800 font-panpizza text-center">{title}</h1>
        </div>

        <!-- Colonne 3: Contact info -->
        <div class="md:order-3">
          <div class="flex flex-col items-end text-right text-xs text-gray-600">
            <div>{hours}</div>
            <div>{closedDay}</div>
            <a
              href={phoneHref}
              class="underline hover:text-[#C0392B] transition-colors"
              aria-label="Appeler Prima Pizza"
            >
              {phone}
            </a>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</header>
